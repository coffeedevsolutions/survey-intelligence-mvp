{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "question_text", "question_type"],
  "properties": {
    "id": { 
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "question_text": { 
      "type": "string", 
      "minLength": 5, 
      "maxLength": 500
    },
    "question_type": { 
      "type": "string", 
      "enum": ["text", "single_select", "multi_select", "number", "boolean", "rating"]
    },
    "options": { 
      "type": "array", 
      "items": { 
        "type": "string",
        "minLength": 1,
        "maxLength": 200
      }, 
      "maxItems": 10,
      "minItems": 2
    },
    "rationale": { 
      "type": "string", 
      "maxLength": 500
    },
    "needs_clarification": { 
      "type": "boolean"
    },
    "follow_up_hint": { 
      "type": "string",
      "maxLength": 300
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "context_tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "maxItems": 10
    }
  },
  "additionalProperties": false
}
