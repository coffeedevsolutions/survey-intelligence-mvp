{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title", "summary", "epics", "requirements"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200
    },
    "summary": {
      "type": "string",
      "minLength": 50,
      "maxLength": 2000
    },
    "epics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "priority"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "title": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "minLength": 20,
            "maxLength": 1000
          },
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "estimated_effort": {
            "type": "string",
            "enum": ["small", "medium", "large", "extra-large"]
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxItems": 10
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 300
            },
            "maxItems": 10
          },
          "stakeholders": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 100
            },
            "maxItems": 10
          }
        },
        "additionalProperties": false
      },
      "minItems": 1,
      "maxItems": 20
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "type", "priority"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "type": {
            "type": "string",
            "enum": ["functional", "non-functional", "technical", "business", "compliance"]
          },
          "priority": {
            "type": "string",
            "enum": ["must-have", "should-have", "could-have", "won't-have"]
          },
          "epic_id": {
            "type": "string",
            "maxLength": 50
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 300
            },
            "maxItems": 5
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxItems": 5
          },
          "estimated_effort": {
            "type": "string",
            "enum": ["small", "medium", "large", "extra-large"]
          }
        },
        "additionalProperties": false
      },
      "minItems": 1,
      "maxItems": 50
    },
    "technical_stack": {
      "type": "object",
      "properties": {
        "frontend": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "maxItems": 10
        },
        "backend": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "maxItems": 10
        },
        "database": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "maxItems": 5
        },
        "infrastructure": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "maxItems": 10
        }
      },
      "additionalProperties": false
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "impact", "probability"],
        "properties": {
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500
          },
          "impact": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "probability": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "mitigation": {
            "type": "string",
            "maxLength": 500
          }
        },
        "additionalProperties": false
      },
      "maxItems": 10
    },
    "timeline": {
      "type": "object",
      "properties": {
        "estimated_duration": {
          "type": "string",
          "maxLength": 100
        },
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "duration"],
            "properties": {
              "name": {
                "type": "string",
                "maxLength": 100
              },
              "duration": {
                "type": "string",
                "maxLength": 50
              },
              "description": {
                "type": "string",
                "maxLength": 300
              }
            },
            "additionalProperties": false
          },
          "maxItems": 10
        }
      },
      "additionalProperties": false
    },
    "success_metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["metric", "target"],
        "properties": {
          "metric": {
            "type": "string",
            "maxLength": 200
          },
          "target": {
            "type": "string",
            "maxLength": 100
          },
          "measurement_method": {
            "type": "string",
            "maxLength": 300
          }
        },
        "additionalProperties": false
      },
      "maxItems": 10
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "metadata": {
      "type": "object",
      "properties": {
        "analysis_version": {
          "type": "string",
          "maxLength": 20
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "model_used": {
          "type": "string",
          "maxLength": 50
        },
        "processing_time_ms": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
