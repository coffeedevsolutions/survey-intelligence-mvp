{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["facts", "confidence"],
  "properties": {
    "facts": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "required": ["value", "confidence"],
          "properties": {
            "value": {
              "oneOf": [
                { "type": "string" },
                { "type": "number" },
                { "type": "boolean" },
                { "type": "array", "items": { "type": "string" } }
              ]
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "source": {
              "type": "string",
              "maxLength": 200
            },
            "extracted_at": {
              "type": "string",
              "format": "date-time"
            },
            "context": {
              "type": "string",
              "maxLength": 500
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "summary": {
      "type": "string",
      "maxLength": 1000
    },
    "insights": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "value", "confidence"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["requirement", "constraint", "stakeholder", "metric", "timeline", "risk", "opportunity"]
          },
          "value": {
            "type": "string",
            "maxLength": 500
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      },
      "maxItems": 20
    },
    "next_question_suggestion": {
      "type": "object",
      "properties": {
        "question_text": {
          "type": "string",
          "minLength": 10,
          "maxLength": 300
        },
        "question_type": {
          "type": "string",
          "enum": ["text", "single_select", "multi_select", "number", "boolean", "rating"]
        },
        "rationale": {
          "type": "string",
          "maxLength": 300
        },
        "priority": {
          "type": "string",
          "enum": ["high", "medium", "low"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
